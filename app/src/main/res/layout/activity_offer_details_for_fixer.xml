<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".presentation.ui.activity.JobDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_normal">

        <TextView
            android:id="@+id/forFixer_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Wall mount my TV"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forFixer_job_postedBy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_padding_normal"
                android:textSize="@dimen/text_size_xnormal"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="Posted By:"/>

            <TextView
                android:id="@+id/forFixer_job_postedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_padding_normal"
                android:paddingLeft="@dimen/margin_padding_xnormal"
                android:paddingStart="@dimen/margin_padding_xnormal"
                android:paddingRight="@dimen/margin_padding_xnormal"
                android:paddingEnd="@dimen/margin_padding_xnormal"
                android:textSize="@dimen/text_size_xnormal"
                android:textColor="@color/colorPrimaryDark"
                android:text="Poster Name"/>
        </LinearLayout>

        <TextView
            android:id="@+id/forFixer_offer_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_padding_normal"
            android:textSize="@dimen/text_size_xnormal"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="Your Offer;"/>

        <TextView
            android:id="@+id/forFixer_offer_amount_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_padding_tiny"
            android:textSize="@dimen/text_size_xlarge"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:paddingBottom="@dimen/margin_padding_normal"
            android:text="UGX. 150,000"/>

        <TextView
            android:id="@+id/forFixer_offer_msg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_padding_normal"
            android:textSize="@dimen/text_size_xnormal"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="Message;"/>

        <TextView
            android:id="@+id/forFixer_offer_details_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_padding_tiny"
            android:textSize="@dimen/text_size_xnormal"
            android:textColor="@color/colorPrimaryDark"
            android:text="Message from fixer"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forFixer_offer_last_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_padding_normal"
                android:textSize="@dimen/text_size_xnormal"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="Last Edited on;"/>

            <TextView
                android:id="@+id/forFixer_offer_last_edit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_padding_xnormal"
                android:paddingStart="@dimen/margin_padding_xnormal"
                android:paddingRight="@dimen/margin_padding_xnormal"
                android:paddingEnd="@dimen/margin_padding_xnormal"
                android:textSize="@dimen/text_size_xnormal"
                android:textColor="@color/colorPrimaryDark"
                android:text="10 MAR 2020"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forFixer_offer_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/margin_padding_normal"
                android:textSize="@dimen/text_size_xnormal"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="Status;"/>

            <TextView
                android:id="@+id/forFixer_offer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_padding_xnormal"
                android:paddingStart="@dimen/margin_padding_xnormal"
                android:paddingRight="@dimen/margin_padding_xnormal"
                android:paddingEnd="@dimen/margin_padding_xnormal"
                android:textSize="@dimen/text_size_xnormal"
                android:textColor="@color/colorPrimaryDark"
                android:text="Seen by job poster"/>
        </LinearLayout>

        <Button
            android:id="@+id/forFixer_editOffer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_normal"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/margin_padding_tiny"
            android:text="Edit Offer" />

        <RelativeLayout
            android:id="@+id/forFixer_afterAcceptOffer_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_padding_tiny"
            android:orientation="horizontal">

            <Button
                android:id="@+id/forFixer_rejectOffer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/design_default_color_error"
                android:textColor="@color/white"
                android:padding="@dimen/margin_padding_tiny"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:text="Reject Job" />

            <Button
                android:id="@+id/forFixer_callPoster_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/save"
                android:text="Call" />
        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/forFixer_viewJobDetails"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_xnormal"
            android:text="View Job Details" />

        <ProgressBar
            android:id="@+id/forFixer_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:indeterminateTint="#ea4c88"/>

        <!--<view
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="1dp"
            />-->


    </LinearLayout>

</ScrollView>